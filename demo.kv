#:kivy 2.0.0

Screen1:
<Screen1>:

    MDTextField:
        id: text_field
        halign: "center"
        hint_text: "Type Customer ID:"
        helper_text: "Please type customer ID correctly!"
        helper_text_mode: "on_focus"
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        on_text_validate: root.textInput(self)

    MDFillRoundFlatButton:
        markup: True
        text: "[b]   Add   [/b]"
        md_bg_color: 1, 0, 0, 1
        width: dp(250)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        on_press: root.onClick()

    MDLabel:
        text: root.member_id
        halign: "center"
        pos_hint: {'center_y': 0.3}
        font_name: "mm.ttf"

